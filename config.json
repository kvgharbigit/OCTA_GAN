{
    "// Training Parameters": null,
    "num_epochs": 200,
    "batch_size": 3,
    "learning_rate": 0.0001,
    "beta1": 0.5,
    "beta2": 0.999,
    "weight_decay": 1e-4,
    "gradient_clip": 1.0,

    "// Loss Weights": null,
    "lambda_pixel": 0,
    "lambda_perceptual": 0,
    "lambda_ssim": 50,
    "lambda_adv": 10,

    "// Data Parameters": null,
    "data": {
        "base_dir": "Z:\\Projects\\Ophthalmic neuroscience\\Projects\\Kayvan\\OCTA_Roshan_Proj\\OCTA_GAN",
        "data_dir": "Z:\\Projects\\Ophthalmic neuroscience\\Projects\\Control Database 2024\\Kayvan_experiments\\Kayvans_Model_Dataset",
        "approved_csv_path": "${base_dir}/approved_participants.csv",
        "val_ratio": 0.1,
        "test_ratio": 0.2,
        "target_size": 500,
        "random_seed": 42
    },

    "// Output Directories": null,
    "output": {
        "base_dir": "Z:\\Projects\\Ophthalmic neuroscience\\Projects\\Kayvan\\OCTA_Roshan_Proj\\OCTA_GAN\\output",
        "checkpoint_dir": "${base_dir}/checkpoints",
        "results_dir": "${base_dir}/results",
        "tensorboard_dir": "${base_dir}/tensorboard",
        "visualization_dir": "${base_dir}/visualizations"
    },

    "// Checkpointing": null,
    "save_interval": 10,
    "validate_interval": 3,

    "// Learning Rate Scheduling": null,
    "lr_scheduler": {
    "type": "ReduceLROnPlateau",
    "mode": "min",
    "factor": 0.5,
    "patience": 10,
    "min_lr": 1e-8,
    "verbose": true,
    "threshold": 0.01,
    "cooldown": 0,
    "threshold_mode": "rel",

    "lr_decay_interval": 50,
    "lr_decay_factor": 0.1
    },

    "// Model Architecture": null,
    "model": {
        "spectral_channels": 31,
        "generator": {
            "initial_filters": 32,
            "max_filters": 128
        },
        "discriminator": {
            "initial_filters": 64,
            "max_filters": 512
        }
    },

    "// Augmentation Settings": null,
    "augmentation": {
        "enabled": true,
        "horizontal_flip_prob": 0.5,
        "vertical_flip_prob": 0.5,
        "rotation_degrees": 10,
        "translate_ratio": 0.1
    },

    "// Logging": null,
    "logging": {
        "print_interval": 100,
        "save_images_interval": 3,
        "save_images_interval_start": 0
    },

    "// Hardware Settings": null,
    "hardware": {
        "num_workers": 4,
        "pin_memory": true,
        "cuda_device": 0
    },

    "// Early Stopping": null,
    "early_stopping": {
        "enabled": false,
        "patience": 500,
        "min_delta": 0.0001
    },

    "// Loss Settings": null,
    "loss_components": {
        "pixel_enabled": false,
        "perceptual_enabled": false,
        "ssim_enabled": true,
        "adversarial_enabled": true
    }

}